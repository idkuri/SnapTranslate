{
  "name": "translate",
  "version": "1.0.0",
  "description": "",
  "main": "main.js",
  "scripts": {
    "start": "pyinstaller --noconfirm screenshot.py && electron .",
    "dev": "set APP_DEV=true && npx electronmon .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean": "rimraf dist && rimraf build && rimraf screenshot.spec",
    "build": "electron-builder --dir && pyinstaller --noconfirm screenshot.py --distpath=./dist/win-unpacked/resources"
  },
  "electronmon": {
    "patterns": [
      "!tmp2211567.png"
    ]
  },
  "build": {
    "appId": "com.example.app",
    "directories": {
      "output": "dist"
    },
    "extraResources": [
      "dist/resources/screenshot/screenshot.exe"
    ],
    "files": [
      "main.js",
      "index.html",
      "styles.css",
      "renderer.js",
      "!dist/resources/screenshot/screenshot.exe",
      "windows.css",
      "buildResources/icons/*",
      "buildResources/fonts/*",
      "buildResources/logo.ico"
    ],
    "win": {
      "target": "NSIS"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "electron": "^25.1.0",
    "electron-builder": "^24.13.3",
    "rimraf": "^6.0.1"
  },
  "dependencies": {
    "@fluentui/react": "^8.110.3",
    "bootstrap-icons": "^1.10.5",
    "electronmon": "^2.0.2",
    "node-tesseract-ocr": "^2.2.1"
  }
}
